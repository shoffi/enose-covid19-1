{
  "name": "enose-covid19",
  "author": "Azzam Jihad Ulhaq <azzam.jiul@gmail.com>",
  "homepage": "./",
  "main": "electron/main.js",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "bootstrap": "^4.5.2",
    "chart.js": "^2.9.3",
    "electron-modal": "^1.0.0",
    "mysql": "^2.18.1",
    "node-cron": "^2.0.3",
    "python-shell": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.4"
  },
  "scripts": {
    "start": "npm run watch:css && export BROWSER=none && react-scripts start",
    "start-electron": "export ELECTRON_START_URL=http://localhost:3000 && electron .",
    "build": "npm run watch:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "rebuild": "electron-rebuild -f -w serialport",
    "build-electron": "cp -r electron/. build/electron && cp -r python/. build/python",
    "package": "electron-builder build --linux deb -c.extraMetadata.main=build/electron/main.js --publish never",
    "watch:css": "postcss src/styles/tailwind.css -o src/styles/main.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "9.8.6",
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.2.0",
    "postcss-cli": "^8.2.0",
    "tailwindcss": "^1.9.6"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "enose-covid19",
      "owner": "azzamjiul"
    }
  }
}
